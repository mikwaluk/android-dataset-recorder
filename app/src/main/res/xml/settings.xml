    </PreferenceCategory>

    <PreferenceCategory android:title="Additional Sensors" >

        <ListPreference
            android:key="perfImuFreq"
            android:title="IMU Frequency"
            android:summary="Frequency the IMU should collect at"
            android:entries="@array/imuFreq"
            android:entryValues="@array/imuFreqValues"
            android:defaultValue="1" />

        <ListPreference
            android:key="perfGPSFreq"
            android:title="GPS Frequency"
            android:summary="Frequency the GPS should collect at"
            android:entries="@array/gpsFreq"
            android:entryValues="@array/gpsFreqValues"
            android:defaultValue="1.0" />

    </PreferenceCategory>

    <PreferenceCategory android:title="Choose sensors">

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="record_camera"
            android:title="Record camera" />
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="record_imu"
            android:title="Record IMU" />
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="record_gps"
            android:title="Record GPS" />

    </PreferenceCategory>
    <PreferenceCategory android:title="Finished">

        <Preference
            android:key="exitlink"
            android:summary="Start the recorder"
            android:title="Click Here to Exit" />

    </PreferenceCategory>

</PreferenceScreen>