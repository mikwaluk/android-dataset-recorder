        <ListPreference
            android:key="prefCamera"
            android:title="Live Camera"
            android:summary="Choose what camera to use" />

        <ListPreference
            android:key="prefSizeRaw"
            android:title="Raw Image Size"
            android:summary="Set the incoming image size" />

        <!--<ListPreference-->
